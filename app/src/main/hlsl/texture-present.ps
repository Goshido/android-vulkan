[[vk::binding ( 0, 0 )]]
Texture2D<float32_t4>       g_Texture;

[[vk::binding ( 1, 0 )]]
SamplerState                g_Sampler;

//----------------------------------------------------------------------------------------------------------------------

float32_t4 PS ( [[vk::location ( 0 )]] in noperspective float32_t2 uv: COORDINATE ): SV_Target0
{
    // TODO We are doing gamma correction here. It's not right in common case. Please move this logic in
    // appropriate place when mode modules will be ready.
    const float32_t3 sampleColor = g_Texture.SampleLevel ( g_Sampler, uv, 0.0F ).xyz;
    return float32_t4 ( pow ( sampleColor, 2.2F ), 1.0F );
}
