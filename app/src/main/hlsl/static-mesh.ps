[[ vk::binding ( 1 ) ]]
Texture2D<float4>       g_diffuseTexture:       register ( t0 );

[[ vk::binding ( 2 ) ]]
SamplerState            g_textureSampler:       register ( s0 );

//----------------------------------------------------------------------------------------------------------------------

float4 PS ( [[ vk::location ( 0 ) ]] in linear half2 uv: UV ): SV_Target0
{
    return g_diffuseTexture.Sample ( g_textureSampler, (float2)uv );
}
